            </GridView.ItemTemplate>
        </GridView>

        -->
        <GridView Grid.Row="1"
          Grid.Column="1"
        Background="red"
      ItemsSource="{x:Bind ViewModel.ImageGallery}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="scryfall:ImageLink">
                    <StackPanel Margin="10" Width="200">
                        <Image Source="{x:Bind Large}" 
                   Width="200" 
                   Height="279" 
                   Stretch="UniformToFill" />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
       


    </Grid>
</Window>
